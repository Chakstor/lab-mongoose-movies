<h2>{{title}}</h2>

<form method="POST" {{#if celebrity}} action="/celebrities/{{ celebrity._id }}" {{else}} action="/celebrities" {{/if}}>
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" {{#if celebrity.name}} value="{{ celebrity.name }}" {{/if}}>
    </div>
    <div class="form-group">
        <label for="occupation">Occupation</label>
        <input type="text" class="form-control" id="occupation" name="occupation" {{#if celebrity.name}} value="{{ celebrity.occupation }}" {{/if}}>
    </div>
    <div class="form-group">
        <label for="catchPhrase">Catch Phrase</label>
        <input type="text" class="form-control" id="catchPhrase" name="catchPhrase" {{#if celebrity.name}} value="{{ celebrity.catchPhrase }}" {{/if}}>
    </div>
    <button type="submit" class="btn btn-primary">
        {{#if celebrity}}
            Update
        {{else}}
            Create
        {{/if}}
    </button>
</form>