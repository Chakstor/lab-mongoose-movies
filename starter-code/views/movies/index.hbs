<h2>{{title}}</h2>

<a href="/movies/form">Add a movie</a>

{{#each movies}}
    <p>
        <a href="/movies/{{this._id}}">{{this.title}}</a>
        <a href="/movies/{{this._id}}/edit">Edit</a>
        <form method="POST" action="/movies/{{this._id}}/delete">
            <button type="submit">Delete</button>
        </form>
    </p>
{{/each}}